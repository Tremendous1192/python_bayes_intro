{
    "font": {
        "size": 14
    },
    "figure": {
        "figsize": [5.6,4],
        "dpi": 120
    },
    "mathtext": {
        "fontset": "stix"
    },
    "lines": {
        "linewidth": 2
    },
    "axes": {
        "grid": true,
        "labelsize": 20,
        "linewidth": 1.0,
        "axisbelow": true
    },
    "grid": {
        "linestyle": ":",
        "linewidth": 0.3,
        "alpha": 0.3
    },
    "xtick": {
        "direction": "in",
        "labelsize": 10,
        "major.pad": 6,
        "top": true
    },
    "ytick": {
        "direction": "in",
        "labelsize": 10,
        "major.pad": 6,
        "right": true
    },
    "legend": {
        "handletextpad": 0.5
    }
}